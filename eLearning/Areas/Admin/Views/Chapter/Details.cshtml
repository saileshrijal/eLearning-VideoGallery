@model eLearning.ViewModels.ChapterVM

@{
    ViewData["Title"] = "Chapter Details";
}

<div class="my-2">
     <a asp-action="Index" class="btn btn-info"><i class="bi bi-arrow-left-circle"></i> Back to List</a>
</div>

    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Chapter Details</h4>
        </div>
        <div class="card-body">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="Name" asp-for="Name" placeholder="Name" disabled>
                <label for="Name">Name</label>
            </div>
              <div class="form-floating mb-3">
            <input type="text" class="form-control" id="Name" asp-for="Unit" placeholder="Unit" disabled>
                <label for="Unit">Unit</label>
            </div>
            <div class="form-floating mb-3">
            <textarea class="form-control" id="Description" asp-for="Description" placeholder="Description" disabled rows="8"></textarea>
                <label for="Description">Description</label>
            </div>
             <div class="form-floating mb-3">
            <input type="text" class="form-control" id="Grade" asp-for="Grade!.Name" placeholder="Grade" disabled>
                <label for="Grade">Grade</label>
            </div>
             <div class="form-floating mb-3">
            <input type="text" class="form-control" id="Subject" asp-for="Subject!.Name" placeholder="Name" disabled>
                <label for="Subject">Subject</label>
            </div>
            <div class="form-floating mb-3">
            <input type="date" class="form-control" asp-for="CreatedAt" id="CreatedAd" placeholder="Created At" disabled>
                <label for="Name">Create At</label>
            </div>
        </div>
    </div>